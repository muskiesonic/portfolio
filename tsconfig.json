{
    "compilerOptions": {
        "lib": ["DOM", "ES6"],
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./dist",

        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["server/**/*.ts"],
    "exclude": ["node_modules"]
}
